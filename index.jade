  body

    //
      Navigation
      ==================================================
    nav.navbar.navbar-dark.bg-inverse.bg-inverse-custom.navbar-fixed-top
      .container
        a.navbar-brand.fade-50(href='#')
          img(src="img/logo-white.svg", alt="", style="height: 30px;")
          span.sr-only Suflyka by Hafiz Hamidun

    //
      Hero Section
      ==================================================
    canvas#star
    header.jumbotron.text-xs-center.center-vertically(role='banner')
      .container

        h1.display-3
          img(src="img/logo-kerawang.svg", alt="", style="width: 50%; max-width: 400px;")
          span.sr-only Suflyka by Hafiz Hamidun

        h4.m-t-3.m-b-1.text-white
          span.fade-25 by

        h6
          a.fade-on-hover(href="https://hafizhamidun.com")
            img(src="img/hh-white.svg", alt="", style="width: 220px;")
            span.sr-only Hafiz Hamidun
        
        ul.nav.nav-inline.social-share
          li.nav-item
            a.nav-link(href='https://www.facebook.com/suflyka')
              span.fa.fa-facebook
              span.count.facebook-count
          li.nav-item
            a.nav-link(href='https://www.instagram.com/suflyka')
              span.fa.fa-instagram
              span.count.instagram-count

    //
      Quotes
    section.section-quote(data-bg-image="/img/bg-2.jpg")
      .container.instagram-quote
        .col-md-6.col-md-offset-3
          blockquote.blockquote.blockquote-reverse.text-white
            p.m-b-0.ig-quote
            footer.blockquote-footer.ig-quote-footer.text-white.fade-25

    //
      Footer
      ==================================================
    footer.section-footer.bg-white(role='contentinfo')
      .container
        .row
          .col-md-10
            .media
              .media-left
                img(src="img/logo-yellow.svg", alt="", style="height: 38px;")
              small.media-body.media-bottom
                span.fade-50 Â© Suflyka 2016
                br
                span
                  | Handcrafted with 
                  i.icon-heart.mdc-text-red
                  |  at 
                  b Arteffects International
          .col-md-2
            ul.nav.nav-inline
              li.nav-item
                a.nav-link.scroll-top(href='#totop')
                  span.icon-caret-up

    script(src='https://ajax.googleapis.com/ajax/libs/jquery/2.2.0/jquery.min.js')
    script(src='js/site.min.js')
